<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/video_imageView"
        android:layout_width="match_parent"
        android:layout_height="180sp" 
        android:scaleType="centerCrop"
        android:src="@drawable/smosh"/>
    
    <LinearLayout 
    	android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_gravity="bottom"
   		android:orientation="vertical">
   		
        <TextView
            android:id="@+id/video_textview_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="1sp"
            android:background="@drawable/textview_background"
            android:focusableInTouchMode="false"
            android:gravity="right"
            android:paddingBottom="3sp"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:paddingTop="3sp"
            android:text="@string/app_name"
            android:textColor="#FFFFFF" />

    	<TextView
	         android:id="@+id/video_textview_title"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:paddingLeft="10dp"
		     android:paddingRight="10dp"
		     android:paddingTop="10dp"
		     android:paddingBottom="10dp"
		     android:layout_gravity="bottom"            
	         android:textColor="@android:color/white"
	    	 android:background="#DD000000"
	    	 android:singleLine="true"
	         android:ellipsize="end"
	         android:text="@string/app_name" />    
    </LinearLayout>

    <ImageView
        android:background="@drawable/play_background"
        android:id="@+id/play_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="right"        
        android:clickable="false"
        android:layout_margin="3dp"
        android:src="@drawable/ic_action_play_over_vide" />
          
</FrameLayout>
